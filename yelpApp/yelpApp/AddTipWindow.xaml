<Window x:Class="yelpApp.TipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yelpApp"
        mc:Ignorable="d"
        Title="Window1" Height="340" Width="508">
    <Grid>
        <TextBox x:Name="tipText" HorizontalAlignment="Center" Height="166" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="428" Margin="0,53,0,0"/>
        <Label x:Name="tipLabel" Content="Enter your tip here:" HorizontalAlignment="Left" Height="29" Margin="40,24,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Height="25" Margin="360,252,0,0" VerticalAlignment="Top" Width="108" Click="submitButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Height="25" Margin="40,252,0,0" VerticalAlignment="Top" Width="108" Click="cancelButton_Click"/>

    </Grid>
</Window>
